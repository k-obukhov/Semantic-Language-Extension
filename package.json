{
    "name": "semantic-language",
    "displayName": "SLangIDE (Semantic Language)",
    "description": "Semantic Language (SLang) support for VSCode",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/NothingIsGood/Semantic-Language-Extension.git"
    },
    "publisher": "NothingIsGood",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "key": "ctrl+f10",
                "command": "workbench.action.tasks.runTask",
                "args": "Slang: Launch"
            },
            {
                "key": "ctrl+f9",
                "command": "workbench.action.tasks.runTask",
                "args": "Slang: Build"
            }
        ],
        "configuration": {
            "title": "Slang",
            "properties": {
                "slang.default_project": {
                    "type": [
                        "string",
                        null
                    ],
                    "default": null,
                    "description": "Default project of current workspace"
                }
            }
        },
        "languages": [
            {
                "id": "semanticlanguage",
                "aliases": [
                    "Semantic Language",
                    "semanticlanguage",
                    "Slang",
                    "SLang",
                    "slang"
                ],
                "extensions": [
                    ".sl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "semanticlanguage",
                "scopeName": "source.semlang",
                "path": "./syntaxes/semanticlanguage.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "semanticlanguage",
                "path": "./snippets/semanticlanguage.snippets.json"
            }
        ],
        "commands": [
            {
                "command": "ext.InitProject",
                "title": "SL: Create new project in current workspace"
            },
            {
                "command": "ext.ShowHelp",
                "title": "SL: Show Help"
            },
            {
                "command": "ext.SetActive",
                "title": "SL: Set active project"
            },
            {
                "command": "ext.ShowSamples",
                "title": "SL: Open samples workspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^13.11.1",
        "@types/request": "^2.48.4",
        "tslint": "^5.8.0",
        "typescript": "^3.8.3",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/fs-extra": "^8.1.0",
        "@types/ncp": "^2.0.3",
        "@types/node-fetch": "^2.5.7",
        "@types/semver": "^7.1.0",
        "adm-zip": "^0.4.14",
        "fs-extra": "^9.0.0",
        "ncp": "^2.0.0",
        "node-fetch": "^2.6.0",
        "semver": "^7.3.2"
    }
}
